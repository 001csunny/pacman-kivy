<Wall>:
	canvas:
		Color:
			rgba: 0.2,0.1,0.9,1
		Rectangle:
			size: self.size
			pos: self.pos

<GamePlay>:
	canvas:
		Rectangle:
			source: 'img/background.jpg'
			size: self.size
			pos: self.pos
	Wall:
		size_hint: root.ps/root.ww, 1/100
		x: 0
		y: (3*root.ps + 0.04*root.wh)/2+36 - root.wh/100
	Wall:
        size_hint: root.ps/root.ww , 1/100
        x: 0
        y: (3*root.ps + 0.04*root.wh)/2 + 36  + root.ps
    Wall:
        size_hint: root.ps/root.ww , 1/100
        x: root.ww -root.ps
        y:(3*root.ps + 0.04*root.wh)/2 + 36 - root.wh/100
    Wall:
        size_hint: root.ps/root.ww , 1/100
        x: root.ww -root.ps
        y: (3*root.ps + 0.04*root.wh)/2 + 36 + root.ps
    Wall:
        size_hint: 1/100, (3*root.ps + 0.04*root.wh)/(2*root.wh)
        x: root.ps
        y: 36
	Wall:
        size_hint: 1/100, (3*root.ps + 0.04*root.wh)/(2*root.wh)
        x: 0 +root.ps
        y:(3*root.ps + 0.04*root.wh)/2 + 36 + root.ps
    Wall:
        size_hint: 1/100, (3*root.ps + 0.04*root.wh)/(2*root.wh)
        x: root.ww - root.ps - root.ww/100
        y: 36
    Wall:
        size_hint: 1/100, (3*root.ps + 0.04*root.wh)/(2*root.wh)
        x: root.ww -root.ps -root.ww/100
        y:(3*root.ps + 0.04*root.wh)/2 + 36 + root.ps
    Wall:
        size_hint: 1 - 2*root.ps/root.ww, 0.01
        x: root.ps
        y: 36
	Wall:
        size_hint: 1 - 2*root.ps/root.ww, 0.01
        x: root.ps
        y: 0.99*root.wh -36