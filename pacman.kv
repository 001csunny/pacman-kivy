#:set ps 77
<Wall>:
	canvas:
		Color:
			rgba: 0.2,0.1,0.9,1
		Rectangle:
			size: self.size
			pos: self.pos
<Player>:
    Image:
        id:'pacman'
        source: root.pac_img
        pos: root.pos
        size: ps,ps

<Ghost>:
    Image:
        id: 'ghost'
        source: root.sp
        pos: root.pos
        size: ps,ps

<GamePlay>:
	canvas:
		Rectangle:
			source: 'img/background.jpg'
			size: self.size
			pos: self.pos

    pacman: pacman_player

#-----------------------------Left Portal Wall Pair--------------------------
	Wall:
		size_hint: root.ps/root.ww, 1/100
		x: 0
		y: root.wh/2-root.ps/2-1/100
	Wall:
        size_hint: root.ps/root.ww, 1/100
        x: 0
        y: root.wh/2+root.ps/2

#-----------------------------Left Bound Wall Pair--------------------------
    Wall:
		size_hint: ((root.ww/2)-(root.ps)-(root.ps/2))/root.ww, 1/100
		x: root.ps
		y: root.wh-50
	Wall:
		size_hint: ((root.ww/2)-(root.ps)-(root.ps/2))/root.ww, 1/100
		x: root.ps
		y: 50-4

#-----------------------------Right Portal Wall Pair--------------------------
    Wall:
        size_hint: root.ps/root.ww, 1/100
        x: root.ww-root.ps
        y:root.wh/2-root.ps/2-1/100
    Wall:
        size_hint: root.ps/root.ww, 1/100
        x: root.ww-root.ps
        y: root.wh/2+root.ps/2

#-----------------------------Right Bound Wall Pair--------------------------
    Wall:
		size_hint: ((root.ww/2)-(root.ps)-(root.ps/2))/root.ww, 1/100
		x: (root.ww/2)+(root.ps/2)
		y: root.wh-50
	Wall:
		size_hint: ((root.ww/2)-(root.ps)-(root.ps/2))/root.ww, 1/100
		x: (root.ww/2)+(root.ps/2)
		y: 50-4

#-----------------------------Bottom Portal Wall Pair--------------------------
    Wall:
        size_hint: 1/300,(root.wh/8)/root.wh
        x: root.ww/2-root.ps/2
        y: 0
    Wall:
        size_hint: 1/300, (root.wh/8)/root.wh
        x: root.ww/2+root.ps/2
        y: 0

#-----------------------------Bottom Bound Wall Pair--------------------------
    Wall:
        size_hint: 1/300,((root.wh/2)-(root.ps/2)-(root.ps/2)-7.5)/root.wh
        x: root.ps
        y: (root.wh/8)
    Wall:
        size_hint: 1/300,((root.wh/2)-(root.ps/2)-(root.ps/2)-7.5)/root.wh
        x: root.ww-root.ps
        y: (root.wh/8)-4

#-----------------------------Top Portal Wall Pair--------------------------
    Wall:
        size_hint: 1/300, (root.wh/8)/root.wh
        x: root.ww/2-root.ps/2
        y: root.wh-50
    Wall:
        size_hint: 1/300, (root.wh/8)/root.wh
        x: root.ww/2+root.ps/2
        y: root.wh-50

#-----------------------------Top Bound Wall Pair--------------------------
    Wall:
        size_hint: 1/300,((root.wh/2)-(root.ps/2)-(root.ps/2)-7.5)/root.wh
        x: root.ps
        y: (root.wh/2)+(root.ps/2)
    Wall:
        size_hint: 1/300,((root.wh/2)-(root.ps/2)-(root.ps/2)-7.5)/root.wh
        x: root.ww-root.ps
        y: (root.wh/2)+(root.ps/2)

    Player:
        id: pacman_player
        pos: 1,root.wh/2-root.ps/2+3
    
    Ghost:
        id: ghost_1
        pos: 9*ps + 0.07*root.width, ps + 0.02*root.height + 36