#:set ps 77
<Wall>:
	canvas:
		Color:
			rgba: 0.2,0.1,0.9,1
		Rectangle:
			size: self.size
			pos: self.pos
<Player>:
    Image:
        id:'pacman'
        source: root.pac_img
        pos: root.pos
        size: ps,ps

<GamePlay>:
	canvas:
		Rectangle:
			source: 'img/background.jpg'
			size: self.size
			pos: self.pos

    pacman: pacman_player
    
	Wall:
		size_hint: (root.ww/2-root.ps/2)/root.ww, 1/100
		x: 0
		y: root.wh/2-root.ps/2-1/100

	Wall:
        size_hint: (root.ww/2-root.ps/2)/root.ww, 1/100
        x: 0
        y: root.wh/2+root.ps/2

    Wall:
        size_hint: (root.ww/2-root.ps/2)/root.ww, 1/100
        x: root.ww/2+root.ps/2
        y:root.wh/2-root.ps/2-1/100

    Wall:
        size_hint: (root.ww/2-root.ps/2)/root.ww, 1/100
        x: root.ww/2+root.ps/2
        y: root.wh/2+root.ps/2
    #-----------------------------------------------------------------
    Wall:
        size_hint: 1/300,(root.wh/2-root.ps/2+1/100)/root.wh
        x: root.ww/2-root.ps/2-10/3
        y: 0
    Wall:
        size_hint: 1/300, (root.wh/2-root.ps/2+1/100)/root.wh
        x: root.ww/2+root.ps/2
        y: 0
    Wall:
        size_hint: 1/300, (root.wh/2-root.ps/2+1/100)/root.wh
        x: root.ww/2-root.ps/2
        y: root.wh/2+root.ps/2
    
    Wall:
        size_hint: 1/300, (root.wh/2-root.ps/2)/root.wh
        x: root.ww/2+root.ps/2
        y: root.wh/2+root.ps/2

    
    
    Player:
        id: pacman_player
        pos: 1,root.wh/2-root.ps/2+3