<MenuScreen>:
    FloatLayout:
        Image:
            id: pacman
            source: root.img
        Button:
            size_hint: 0.2,0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            text: 'Select Mode'
            on_press: root.manager.current = 'settings'
        Slider:
            id: slider
            size_hint: 0.3,0.5
            pos: (root.ww/2)-80,-80
            value: 0.5
            min: 0
            max: 1 
            on_value: root.update_volume(slider.value)
        Label:
            text: '{:.0f}'.format(slider.value * 100)
            pos: 0, -120

<SettingsScreen>:
    FloatLayout:
        Image:
            source: root.img
        Button:
            size_hint: 0.075, 0.075
            pos: 5, root.wh-390
            text: '<--'
            on_press: root.manager.current = 'menu'
        Button:
            size_hint: 0.2,0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: 'Start Game'
            on_press: root.manager.current_screen.add_widget(root.gaming.build())
        Button:
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            text: 'Easy Mode'
            on_press: root.easy_mode()
        Button:
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            text: 'Hard Mode'
            on_press: root.hard_mode()